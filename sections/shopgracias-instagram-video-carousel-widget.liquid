
        <link href="https://cdn.ampproject.org/amp-story-player-v0.css" rel="stylesheet" type="text/css"/>
        <link href="https://sgscript.nyc3.cdn.digitaloceanspaces.com/ivideocarousel.css" rel="stylesheet" type="text/css"/>

        <script defer src="https://cdn.ampproject.org/amp-story-player-v0.js"></script>

        <div style="padding-top: {{section.settings.videoc_padding_top}}px; margin-top: {{section.settings.videoc_margintop}}px;"></div>


        <h2 style="padding: {{section.settings.videoc_padding}}px; text-align: {{section.settings.videoc_heading_alignment}};
            padding: 0 12px 0 12px;
            font-family: inherit; line-height: inherit; letter-spacing:{{section.settings.videoc_letterspacing}}px; word-spacing: inherit; font-weight: inherit; font-variant: inherit; font-style: inherit; font-stretch: inherit;
            justify-content: center; margin: 12px 0 20px 0; font-size: {{section.settings.videoc_heading_size}}px;">
            {{section.settings.videoc_heading_text}}
        </h2>
        <div 
            id="shopgracias-video-carousel"
            data-shopname="{{ shop.permanent_domain }}"
            data-product-id="{{ product.id }}"
            data-name="{{ product.title | escape }}" >

        </div>

        <div style="padding-bottom: {{section.settings.videoc_padding_bottom}}px"></div>

        {%schema%}
            {
                "name":"ShopGracias Videos",
                "settings":[
                    {"type": "text", "id": "videoc_heading_text", "label": "Heading Text", "default": "Instagram Reels"},
                    {"type": "select", "id": "videoc_heading_alignment", "label": "Heading Alignment", "options": [{"value": "left", "label": "Left"}, {"value": "center", "label": "Center"}], "default": "center"},
                    {"type":"range","id":"videoc_heading_size","min":10,"max":30,"step":1,"unit":"px","label":"Heading Size","default":16},
                    {"type": "range", "id": "videoc_letterspacing", "min":0,"max":40,"step":1,"unit":"px","label":"Letter Spacing", "default": 0},
                    {"type": "range", "id": "videoc_padding_top", "min":0,"max":40,"step":1,"unit":"px","label":"Padding Top", "default": 0},
                    {"type": "range", "id": "videoc_padding_bottom", "min":0,"max":40,"step":1,"unit":"px","label":"Padding Bottom", "default": 0},
                    {"type": "range", "id": "videoc_padding", "min":0,"max":40,"step":1,"unit":"px","label":"Section Padding", "default": 4},
                    {"type": "range", "id": "videoc_margintop", "min":-50,"max":50,"step":1,"unit":"px","label":"Margin Top", "default": 0}
                ],

                "presets":[{"name":"ShopGracias Videos", "category":"Instagram Feed"}]
            }
        {%endschema%}

