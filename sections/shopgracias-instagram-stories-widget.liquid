        <div style="padding-top: {{section.settings.sg_hi_padding_top}}px"></div>

        <h2 class="flex p-1" style="text-align: {{section.settings.heading_alignment}};
            padding: 0 12px 0 12px;
            font-family: inherit; letter-spacing: {{section.settings.sg_hi_letterspacing}}px; line-height:inherit; word-spacing: inherit; font-weight: inherit; font-variant: inherit; font-style: inherit; font-stretch: inherit;
            justify-content: center; margin: 12px 0 20px 0; font-size: {{section.settings.sh_hi_heading_size}}px;">
            {{section.settings.heading_text}}
        </h2>
        <div 
            id="shopgracias-insta-highlights"
            style="display: flex; justify-content: space-around;"
            data-shopname="{{ shop.permanent_domain }}"
            data-product-id="{{ product.id }}"   
            data-name="{{ product.title | escape }}"   
            data-product-title="{{product.title}}"
            >
        </div>
        <div style="padding-bottom: {{section.settings.sg_hi_padding_bottom}}px"></div>


        {%schema%}
            {
                "name":"ShopGracias Stories",
                "settings":[
                    {"type": "text", "id": "heading_text", "label": "Heading Text", "default": "Instagram Stories"},
