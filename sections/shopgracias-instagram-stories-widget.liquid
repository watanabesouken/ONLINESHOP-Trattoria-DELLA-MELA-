                    {"type":"range","id":"sg_hi_padding_bottom","min":0,"max":90,"step":1,"unit":"px","label":"Padding Bottom","default":0}
                ],
                "presets":[{"name":"ShopGracias Stories", "category":"Instagram Feed"}]
            }
